<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/piramide"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <!-- poÃ±er fragment da hora oficial -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0" >

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="+" />

    </LinearLayout>
    
    <TextView
        android:id="@+id/distancia"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.8"
        android:gravity="center"
        android:text="0.00"
        android:textSize="60sp"
        android:textStyle="bold" />
	
    <View android:layout_height="3dip"
        android:layout_width="fill_parent"
        android:background="#333333"/>
    
    <!-- textViews medias -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >
        
    	<TextView
    	    android:id="@+id/lblMediaLabel"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_weight="1"
    	    android:gravity="center"
    	    android:text="media act."
    	    android:textSize="25sp" />
    
        <TextView
            android:id="@+id/lblMediaSig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="media sig."
            android:textSize="25sp" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >
        
	    <TextView
	        android:id="@+id/mediaActual"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:text="-"
	        android:textSize="30sp"
            android:textStyle="bold" />

	    <TextView
	        android:id="@+id/mediaSig"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:text="-"
	        android:textSize="25sp" />

    </LinearLayout>

    <!-- labels de tiempos -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

	  	<TextView
	  	    android:id="@+id/lblTiempoUp"
	  	    android:layout_width="wrap_content"
	  	    android:layout_height="wrap_content"
	  	    android:layout_weight="1"
	  	    android:gravity="center"
	  	    android:text="Tiempo"
	  	    android:textSize="20sp" />

	  	<TextView
	  	    android:id="@+id/lblDistanciaCambio"
	  	    android:layout_width="wrap_content"
	  	    android:layout_height="wrap_content"
	  	    android:layout_weight="1"
	  	    android:gravity="center"
	  	    android:text="Distancia Cambio"
	  	    android:textSize="20sp" />

    </LinearLayout>

    <!-- cronometros -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Chronometer
            android:id="@+id/chronoUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Chronometer"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/distanciaDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0.00"
            android:textSize="25sp" />

    </LinearLayout>

    <!-- labels distancia -->

</LinearLayout>